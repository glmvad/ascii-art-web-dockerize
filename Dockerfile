FROM golang:latest
# Указывает базовый образ, который будет использован для сборки нашего образа
WORKDIR /app
# Устанавливает рабочий каталог внутри контейнера
COPY . .
# Копирует все файлы из текущего каталога (где находится Dockerfile) внутрь контейнера в каталог /app.
RUN go build -o main .
# Выполняется сборка приложения
EXPOSE 8080

CMD ["./main"]
# Задает команду по умолчанию, которая будет выполняться при запуске контейнера